{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <style>
    body {

    background-repeat: no-repeat;
    background-color: #003f5c;
    margin-top: 50px;
    color: #fb5b5a;
    text-align: center;
    }
    .table td
    {
        border:none;
        color: #fb5b5a;
    }
    .table th
    {
        border:none;
        color: #fb5b5a;
    }
    h1
    {
    color: #fb5b5a;
        font-size: 80px;
    }
    .btn
    {
    margin-top: 20px;
    }
    </style>
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
        </tbody>
    </table>
<button type="button" class="btn btn-dark">
    <a href="{{ path('blog_index') }}">Back to the list</a>
</button>
    <button type="button" class="btn btn-dark">
    <a href="{{ path('blog_edit', {'id': blog.id}) }}">Edit</a>
    </button>
    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
