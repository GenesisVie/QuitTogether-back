{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <style>
        body {

            background-repeat: no-repeat;
            background-color: #003f5c;
            margin-top: 50px;
            color: #fb5b5a;
            text-align: center;
        }
        .table td
        {
            border:none;
            color: #fb5b5a;
        }
        .table th
        {
            border:none;
            color: #fb5b5a;
        }
        h1
        {
            color: #fb5b5a;
            font-size: 80px;
        }
        .btn
        {
            margin-top: 20px;
        }
    </style>

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>StoppedAt</th>
                <td>{{ user.stoppedAt ? user.stoppedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PackageCost</th>
                <td>{{ user.packageCost }}</td>
            </tr>
        </tbody>
    </table>
<button class="btn btn-dark">
    <a href="{{ path('user_index') }}">Back to the list</a>
</button>
    <button class="btn btn-dark">
    <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
    </button>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
