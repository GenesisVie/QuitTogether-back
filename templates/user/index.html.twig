{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<style>
    body {

        background-repeat: no-repeat;
        background-color: #003f5c;

    }
    tr
    {
        color: #fb5b5a;
    }
    .table td
    {
        border:none;
    }
    h1
    {
        text-align: center;
        color: #fb5b5a;
    }
    .list-group-item {
        background-color: #003f5c;
        color: #fb5b5a;
        border: none;
        margin-top: 30px;
        width: 200px;
    }
    .footer {
        height: 100px;
        position: absolute;
        bottom: 0;
    }
    .fixed-top
    {
        margin-top: 20px;
    }
    .crea
    {
        margin-top: 20px;
    }
    .btn
    {
        color: #fb5b5a;
        bacbackground-color: "#465881"
    }
</style>
<h1>
    Utilisateurs
</h1>


<div class="d-flex" id="wrapper">
    <div class="mb-3">
        <div class="list-group list-group-flush">
            <a href="{{ path('admin') }}" class="list-group-item list-group-item-action ">Accueil</a>
            <a href="{{ path('user_index') }}" class="list-group-item list-group-item-action ">Utilisateur</a>
            <a href="{{ path('blog_index') }}" class="list-group-item list-group-item-action ">Blog</a>
            <a href="{{ path('statistics_index') }}" class="list-group-item list-group-item-action ">Statistiques</a>
            <div class="crea col-12">
            <button class="btn btn-primary btn-lg">
            <a href="{{ path('user_new') }}">Créer un nouveau</a>
            </button>
            </div>
        </div>

</div>


    <div class="fixed-top col-6">
        <a href="{{ path('app_logout') }}">
            <button class="btn btn-primary btn-lg">
                Logout
            </button>
        </a>
    </div>

    <div class="container">
        <div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>CreatedAt</th>
                <th>Birthday</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                <td>
                    <button type="button" class="btn btn-primary ">
                    <a href="{{ path('user_show', {'id': user.id}) }}">Détails</a>
                    </button>
                        <button type="button" class="btn btn-primary">
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                        </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>

{% endblock %}
