{% extends 'base.html.twig' %}

{% block title %}Motivations{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 margin-tb">
                <div class="pull-left">
                    <h1>Modifier les Motivations</h1>
                </div>

            </div>
        </div>





        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Crée le</th>
                <th>Modifié le</th>
                <th width="280px">Action</th>

            </tr>
            {% for motivation in motivations %}
                <tr>

                    <td>{{ motivation.id }}</td>
                    <td>{{motivation.title}}</td>
                    <td>{{motivation.createdAt |date('d-m-Y')}}</td>
                    <td>{{motivation.updatedAt |date('d-m-Y')}}</td>




                    <td>

                        <form action="" method="POST">

                            <a href="/admin" class="fa fa-search btn btn-primary mr-5 ml-4"></a>

                            <a href="/admin" class="fa fa-edit btn btn-secondary mr-5"></a>

                            <a href="/admin" class="fa fa-trash btn btn-danger"></a>
                        </form>

                    </td>

                </tr>
            {% endfor %}
        </table>
        <div class="pull-right">
            <a class="btn btn-success"> Créer nouveau</a>
        </div>

    </div>

{% endblock %}
